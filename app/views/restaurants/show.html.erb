<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<%=link_to "volver", restaurants_path, class:"btn btn-primary"%>
<%=link_to "Crear review", new_restaurant_review_path(@restaurant), class: "btn btn-warning"%>
<div class="card">
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>
</div>
